{
    "name": "star/todo",
    "description": "Library to log and make todo visible at runtime.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.6",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Star\\Component\\Todo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\Todo\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true
    }
}
